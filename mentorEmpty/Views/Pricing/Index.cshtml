@model PricingVM
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

  <main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
      <div class="container">
        <h2>Pricing</h2>
        <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
      </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Pricing Section ======= -->
    <section id="pricing" class="pricing">
      <div class="container" data-aos="fade-up">

        <div class="row">
          @foreach (Pricings p in Model.Pricing) {       
          <div class="col-lg-3 col-md-6">
            <div class="box @(p.IsFeatured ? "featured" : "")">
              <span class="@(p.isAdvanced ? "advanced" : "")"> @(p.isAdvanced ? "Advanced" : null) </span>
              <h3>@p.Name</h3>
              <h4><sup>$</sup>@p.Price<span> / month</span></h4>
              <ul>
                                @foreach (Features feature in Model.Features)
                                {
                                    <li class="@(feature.Join.Any(x => x.PricingId == p.Id) ? null : "na text-decoration-line-through")"> @feature.Feature </li> 
                                }
              </ul>
              <div class="btn-wrap">
                <a href="#" class="btn-buy">Buy Now</a>
              </div>
            </div>
          </div>
          }
        </div>

      </div>
    </section><!-- End Pricing Section -->

  </main><!-- End #main -->

